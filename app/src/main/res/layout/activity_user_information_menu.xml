<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInformationMenu"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/user_menu_background">

    <LinearLayout
        android:id="@+id/userMenuHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <ImageView
                android:id="@+id/menuItemBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back_ic"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userMenuAvatar"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:civ_border_color="@color/colorAccent"
                    app:civ_border_width="3dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user_avatar"/>
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:text="Tuan Khanh"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/userTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"
                    android:text="Professional"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/userMenuBody"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="110dp">
        <ListView
            android:id="@+id/userMenuList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null">
        </ListView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/userMenuFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/menuItemIcon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/logout_ic"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/userMenuLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#DA111111"
                    android:text="Logout"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>